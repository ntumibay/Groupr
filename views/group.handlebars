<main>
    <div id="group"> 
        <h1>This is the page for {{group.name}}!</h1>
        {{#if isAdmin}}
        <h2>PIN: {{group.PIN}}</h2>
        {{/if}}
        <h2>Members:</h2>
        {{#each group.members}}
            <li>{{this}}</li>
        {{/each}}
    <h2>Administrative Members:</h2>
        {{#each group.administrativeMembers}}
            <li>{{this}}</li>
        {{/each}}
    <h2>Group Events</h2>
            {{#each group.schedule.events}}
                <h3>{{this.title}}</h3>
                <ul>
                    <li>Start Date: {{this.startDate}}</li>
                    <li>End Date: {{this.endDate}}</li>
                </ul>
                <p>Description: {{this.description}}</p>
            {{/each}}

        <h2>Tasks</h2>
            {{#each group.schedule.tasks}}
                <h3>Task {{inc @index}}</h3>
                <ul>
                    <li>Progress: {{this.progress}}</li>
                    <li>Start Date: {{this.startDate}}</li>
                    <li>End Date: {{this.endDate}}</li>
                    <li>Urgency Level: {{this.urgencyLevel}}</li>
                    {{#each group.schedule.tasks.assignedUsers}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p>Description: {{this.description}}</p>
            {{/each}}
        <h2>Group Free Time</h2>
            {{#each group.schedule.groupFreeTime}}
                <ul>
                    <li>Start Date: {{this.startDate}}</li>
                    <li>End Date: {{this.endDate}}</li>
                </ul>
            {{/each}}
    </div>
    {{#if isAdmin}}
    <div class="eventTaskForms">
        {{#if errors}}
            <p class="error">{{errorMessage}}</p>
        {{/if}}
        <form method="POST" action="/group/{{group.PIN}}" id="groupEventForm" class="event-form">
        <h2>Add Event</h2>
        
        <!-- Title (top line) -->
        <div class="form-row">
            <label for="eventTitle">Event Title:</label>
            <input name="eventTitle" id="eventTitle" type="text" required>
        </div>
        
        <!-- Date row -->
        <div class="form-row">
            <div class="form-group">
            <label for="startDate">Start Date:</label>
            <input name="startDate" id="startDate" type="date" required>
            </div>
            <div class="form-group">
            <label for="endDate">End Date:</label>
            <input name="endDate" id="endDate" type="date" required>
            </div>
        </div>
        
        <!-- Time row -->
        <div class="form-row">
            <div class="form-group">
            <label for="startTime">Start Time:</label>
            <input name="startTime" id="startTime" type="time" required>
            </div>
            <div class="form-group">
            <label for="endTime">End Time:</label>
            <input name="endTime" id="endTime" type="time" required>
            </div>
        </div>
        
        <!-- Description (bottom) -->
        <div class="form-row">
            <label for="eventDescription">Event Description:</label>
            <textarea name="eventDescription" id="eventDescription"></textarea>
        </div>
        
        <button name="submitButton" id="submitButton" type="submit" value="event">Add Event</button>
        </form>
        <form method="POST" action="/group/{{group.PIN}}" id="groupTaskForm" class="task-form">
        <h2>Add Task</h2>
        
        <!-- Progress (own line in middle) -->
        <div class="form-row">
            <label for="progress">Progress:</label>
            <select name="progress" id="progress" required>
            <option value="not started">Not Started</option>
            <option value="in progress">In Progress</option>
            <option value="finished">Finished</option>
            </select>
        </div>
        
        <!-- Date row -->
        <div class="form-row">
            <div class="form-group">
            <label for="startDate">Start Date:</label>
            <input name="startDate" id="startDate" type="date" required>
            </div>
            <div class="form-group">
            <label for="endDate">End Date:</label>
            <input name="endDate" id="endDate" type="date" required>
            </div>
        </div>
        
        <!-- Time row -->
        <div class="form-row">
            <div class="form-group">
            <label for="startTime">Start Time:</label>
            <input name="startTime" id="startTime" type="time" required>
            </div>
            <div class="form-group">
            <label for="endTime">End Time:</label>
            <input name="endTime" id="endTime" type="time" required>
            </div>
        </div>
        
        <!-- Urgency and Assignees -->
        <div class="form-row">
            <div class="form-group">
            <label for="urgencyLevel">Urgency Level:</label>
            <select name="urgencyLevel" id="urgencyLevel">
                <option value="1">1 (Low)</option>
                <option value="2">2</option>
                <option value="3">3 (Medium)</option>
                <option value="4">4</option>
                <option value="5">5 (High)</option>
            </select>
            </div>
            <div class="form-group">
            <label for="assignedUsers">Assign Users:</label>
            <input name="assignedUsers" id="assignedUsers" type="text" required>
            </div>
        </div>
        <!-- Description -->
        <div class="form-row">
            <label for="taskDescription">Task Description:</label>
            <textarea name="taskDescription" id="taskDescription"></textarea>
        </div>
        <button name="submitButton" type="submit" value="task">Add Task</button>
        </form>

        <form method="POST" action="/group/{{group.PIN}}" id="addMember">
            <h2>Add Member</h2>
            <label for="userId">User ID:</label>
            <input name="userId" id="userId" type="text" required>
            <button name="submitButton" id="submitButton" type="submit" value="member">Add Member</button>
        </form>
        <form method="POST" action="/group/{{group.PIN}}" id="addAdmin">
            <h2>Add Member to Administration</h2>
            <label for="userId">User ID:</label>
            <input name="userId" id="userId" type="text" required>
            <button name="submitButton" id="submitButton" type="submit" value="admin">Add Administrator</button>
        </form>
    </div>
    {{/if}}
    <a href="/user/{{user.userId}}">Back to User Page</a>
</main>